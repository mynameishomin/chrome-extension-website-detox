{
    "manifest_version": 3,
    "name": "웹사이트 디톡스",
    "version": "1.0",
    "description": "",
    "icons": {
        "64": "icon.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "content_scripts": [
        {
            "js": ["dist/content_script.js"],
            "matches": ["<all_urls>"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["blocked.html", "dashboard.html"],
            "matches": ["<all_urls>"]
        }
    ],
    "permissions": ["storage"]
}
