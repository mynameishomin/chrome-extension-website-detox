{
    "manifest_version": 3,
    "name": "Website detox",
    "version": "1.0",
    "description": "",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "content_scripts": [
        {
            "js": ["dist/content_script.js"],
            "matches": ["<all_urls>"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["blocked.html"],
            "matches": ["<all_urls>"]
        }
    ],
    "permissions": ["storage", "activeTab", "tabs", "scripting"]
}
